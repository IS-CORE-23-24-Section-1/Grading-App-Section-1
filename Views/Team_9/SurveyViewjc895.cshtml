                <h2>Case Description</h2>
                <p>This is where the case description will go...</p>
                <!-- Additional content -->
            </section>

            <!-- More sections for each part of the survey -->

            <section id="questions">
                <h2>Overall System Quality and Client Satisfaction</h2>
                <form method="post">
                    <label for="question1">How effective was the team in building a solution that meets the client’s needs?</label>
                    <textarea id="question1" name="question1"></textarea>

                    <!-- Include other questions and form elements -->
                </form>
            </section>
        </main>
    </div>
